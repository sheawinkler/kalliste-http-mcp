FROM python:3.11-slim
RUN apt-get update && apt-get install -y --no-install-recommends build-essential \
 && pip install --no-cache-dir fastmcp fastapi uvicorn httpx anyio \
 && apt-get purge -y build-essential && apt-get autoremove -y && rm -rf /var/lib/apt/lists/*
WORKDIR /app
# If you have a custom proxy script in ./scripts/, copy it; otherwise FastMCP CLI is sufficient.
COPY scripts/ ./scripts/
CMD ["python3","-m","fastmcp","--transport","http","--host","0.0.0.0","--port","8004","--name","MindsDB-HTTP-Proxy"]
